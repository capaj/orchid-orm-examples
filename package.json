{
  "name": "blog-api",
  "version": "0.0.0",
  "description": "Blog API example for Porm ORM",
  "main": "dist/index.js",
  "scripts": {
    "start": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "prepare": "husky install",
    "format": "eslint --fix \"./src/**/*.ts\""
  },
  "jest": {
    "transform": {
